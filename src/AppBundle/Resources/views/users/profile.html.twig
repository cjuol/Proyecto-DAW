{% block titulo %}Perfil: {{ usuario }}{% endblock %}

{% block body %}
    <div class="tabbable-line">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1_1" data-toggle="tab"> Informaci贸n </a>
            </li>
            <li>
