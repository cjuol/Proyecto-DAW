            </li>
            <li>
                <a href="#tab_1_4" data-toggle="tab">Exenci贸n</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade active in" id="tab_1_1">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input">
                            <span>Nombre:</span>
                            <span class="form-control">{{ usuario.nombre }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input">
                            <span>Apellidos: </span>
                            <span class="form-control">{{ usuario.apellidos }}</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input">
                            <span>Email:</span>
                            <span class="form-control">{{ usuario.correo }}</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group form-md-line-input">
                            <span>Departamento:</span>
                            <span class="form-control">{{ usuario.departamento }}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="tab_1_3">
                <div class="row">
                    <div class="portlet-body flip-scroll">
                        <table class="table table-bordered table-striped table-condensed flip-content">
