                        <tbody>
                        {% for m in usuario.exencion %}
                            <tr>
                                <td>{{ m.codigo }}</td>
                                <td>{{ m.nombre }}</td>
                                <td>{{ m.horasSemanales }}</td>
                                <td>{{ m.horasTotales }}</td>
                                <td>
                                    <a class="btn btn-info btn-xs" href="{{ path('profileExencion', {'id': m.id}) }}">
                                        Mas Info
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    </div>
                </div>
